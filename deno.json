{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": {
      "command": "deno run -A npm:vite --host",
      "description": "Start the server"
    },
    "build": {
      "command": "deno run -A npm:vite build",
      "description": "Build the app"
    },
    "preview": {
      "command": "deno run -A npm:vite preview",
      "description": "Preview the build locally",
      "dependencies": ["build"]
    },
    "serve": {
      "command": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/",
      "description": "Serve the build using Deno file server",
      "dependencies": ["build"]
    },
    "update": {
      "command": "deno outdated --update --latest --interactive",
      "description": "Update the selected packages"
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@1.0.5",
    "@reduxjs/toolkit": "npm:@reduxjs/toolkit@2.8.2",
    "@types/react": "npm:@types/react@19.1.11",
    "@types/react-dom": "npm:@types/react-dom@19.1.7",
    "@types/react-router-dom": "npm:@types/react-router-dom@5.3.3",
    "@vitejs/plugin-react-swc": "npm:@vitejs/plugin-react-swc@4.0.1",
    "jwt-decode": "npm:jwt-decode@4.0.0",
    "oxlint": "npm:oxlint@1.12.0",
    "react": "npm:react@19.1.1",
    "react-dom": "npm:react-dom@19.1.1",
    "react-redux": "npm:react-redux@9.2.0",
    "react-router-dom": "npm:react-router-dom@7.8.2",
    "sass-embedded": "npm:sass-embedded@1.90.0",
    "typescript": "npm:typescript@5.9.2",
    "vite": "npm:vite@6.3.5",
    "vite-plugin-oxlint": "npm:vite-plugin-oxlint@1.4.0"
  }
}
